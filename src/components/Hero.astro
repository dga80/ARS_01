---
interface Props {
    title: string;
    subtitle?: string;
    backgroundImage?: string;
}

const {
    title,
    subtitle,
    backgroundImage = "/images/hero-bg.jpg",
} = Astro.props;
---

<section
    class="relative h-[60vh] md:h-[70vh] flex items-center justify-center overflow-hidden"
>
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 z-0">
        <img
            src={backgroundImage}
            alt=""
            class="w-full h-full object-cover"
            loading="eager"
        />
        <div class="absolute inset-0 bg-black/40"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 container-custom text-center animate-fade-in">
        <div
            class="bg-primary/90 backdrop-blur-md px-10 py-8 md:px-16 md:py-12 inline-block shadow-2xl border border-white/10"
        >
            <h1
                class="text-4xl md:text-6xl lg:text-7xl font-bold uppercase tracking-[0.2em] mb-4 text-white/95"
            >
                {title}
            </h1>
            {
                subtitle && (
                    <p class="text-xl md:text-2xl font-light tracking-[0.3em] text-white/80 italic">
                        {subtitle}
                    </p>
                )
            }
        </div>
    </div>
</section>
