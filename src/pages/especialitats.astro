---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Footer from "../components/Footer.astro";

const especialitats = [
    "Dret Matrimonial",
    "Dret de Família",
    "Dret Laboral",
    "Dret Penal",
    "Dret Civil",
    "Dret Mercantil",
    "Dret Administratiu",
    "Dret Fiscal",
    "Dret Immobiliari",
    "Dret d'Estrangeria",
    "Dret de Successions",
    "Reclamacions de Deutes",
    "Dret Bancari",
    "Dret del Consum",
    "Dret de Societats",
];
---

<BaseLayout
    title="Especialitats | ARS Advocats"
    description="Àrees d'especialització d'ARS Advocats: dret matrimonial, laboral, penal, civil, mercantil i més. Assessorament jurídic integral."
>
    <Navbar />

    <Hero title="ESPECIALITATS" subtitle="advocats" />

    <section class="section-padding bg-white">
        <div class="container-custom max-w-5xl">
            <div class="text-center mb-16">
                <h2
                    class="text-3xl md:text-4xl font-semibold text-primary mb-4"
                >
                    Àrees d'especialització
                </h2>
                <p class="text-lg text-secondary max-w-2xl mx-auto">
                    Oferim assessorament jurídic integral en múltiples àrees del
                    dret, adaptant-nos a les necessitats específiques de cada
                    client
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {
                    especialitats.map((especialitat) => (
                        <div class="group">
                            <div class="bg-accent-grey hover:bg-primary transition-colors duration-300 rounded-lg p-6 h-full flex items-center justify-center text-center shadow-md hover:shadow-lg">
                                <div>
                                    <svg
                                        class="w-12 h-12 mx-auto mb-4 text-primary group-hover:text-white transition-colors"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                                        />
                                    </svg>
                                    <h3 class="text-lg font-semibold text-secondary-dark group-hover:text-white transition-colors">
                                        {especialitat}
                                    </h3>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>

            <!-- Call to Action -->
            <div class="mt-16 text-center">
                <p class="text-lg text-secondary mb-6">
                    Necessites assessorament en alguna d'aquestes àrees?
                </p>
                <a href="/contacte" class="btn-primary">
                    Contacta amb nosaltres
                </a>
            </div>
        </div>
    </section>

    <Footer />
</BaseLayout>
